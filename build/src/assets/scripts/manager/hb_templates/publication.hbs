<div>
    <div id="pubHeader">
        <div id="sharedPubData" class="form-horizontal" >
            <div id="pub-id-div" class="form-group">
                <label class="control-label" >Prod ID</label>
                <input type="text" class="form-control" readonly/>
            </div>

            <div id="pub-index-id-div" class="form-group">
                <label class="control-label" >Index ID</label>
                <input type="text" class="form-control" readonly />
            </div>

            <div id="ipds-div" class="form-group">
                <label class="control-label" >IPDS</label>
                <input type="text" id="ipds-input" class="form-control"/>
            </div>

            <div id="pub-display-to-public-div" class="form-group">
                <label class="control-label" >Display to public date</label>
                <div class="input-group date" id="display-date">
                    <input type="text" class="form-control" />
                    <span class="input-group-addon">
                        <i class="fas fa-calendar"></i>
                    </span>
                </div>
            </div>
            <div id="pub-preview-div" class="form-group">
                <label class="control-label">Publication preview</label>
                <a href="{{previewUrl}}{{indexId}}" target="_blank">Preview</a>
            </div>

        </div>
        <div class="alert-error-container">

            <div class="loading-indicator"><i class="fas fa-spinner fa-spin fa-5x"></i></div>
            <div class="alert-container"></div>
            <div class="validation-errors"></div>
        </div>
    </div>
    <div class="row actions">
        <button class="reset-btn btn btn-default" data-toggle="tooltip" data-placement="top" title="Reload the publication">Reset</button>
        <button class="release-btn btn btn-default" data-toggle="tooltip" data-placement="top" title="Release the lock on the publication and return to the search page">Release</button>
        <button class="save-btn btn btn-default" data-toggle="tooltip" data-placement="top" title="Save the publication">Save Changes</button>
        <button class="publish-btn btn btn-default" data-toggle="tooltip" data-placement="top" title="Make the publication available to the public">Publish</button>
        <button class="delete-btn btn btn-default" data-toggle="tooltip" data-placement="top" title="Remove the publication">Delete</button>
    </div>

    <div class="edit-tabs">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#bibliodata-pane" aria-controls="bibliodata-pane" role="tab" data-toggle="tab">Bibliodata</a></li>
            <li role="presentation"><a href="#contributors-pane" aria-controls="contributors-pane" role="tab" data-toggle="tab">Contributors</a></li>
            <li role="presentation"><a href="#links-pane" aria-controls="links-pane" role="tab" data-toggle="tab">Links</a></li>
            <li role="presentation"><a href="#spn-pane" aria-controls="spn-pane" role="tab" data-toggle="tab">SPN</a></li>
            <li role="presentation"><a href="#cataloging-pane" aria-controls="cataloging-pane" role="tab" data-toggle="tab">Cataloging</a></li>
            <li role="presentation"><a href="#geospatial-pane" aria-controls="geospatial-pane" role="tab" data-toggle="tab">Geospatial</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="bibliodata-pane"></div>
            <div role="tabpanel" class="tab-pane" id="contributors-pane"></div>
            <div role="tabpanel" class="tab-pane" id="links-pane"></div>
            <div role="tabpanel" class="tab-pane" id="spn-pane"></div>
            <div role="tabpanel" class="tab-pane" id="cataloging-pane"></div>
            <div role="tabpanel" class="tab-pane" id="geospatial-pane"></div>
        </div>
    </div>
</div>
<div class="confirmation-dialog-container"></div>
<div class="login-dialog-container"></div>
<div class="locked-pub-dialog-container">
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="locked-dialog-title">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close close-btn" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="confirmation-dialog-title">Publication Locked</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary close-btn" >OK</button>
                </div>
            </div>
        </div>
    </div>
</div>
