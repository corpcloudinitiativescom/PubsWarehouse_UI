<div class="back-to-search-div"><a class="back-to-search-btn" href="#">Back to Search</a></div>
<div class="edit-affiliation-panel panel panel-default">
    <div class="panel-heading"><h2 class="panel-title">Edit Affiliation</h2></div>
    <div class="panel-body">
        <div class="alert-container"></div>
        <div class="loading-indicator"><i class="fas fa-spinner fa-spin fa-5x"></i></div>
        <div class="validation-errors"></div>
        <div class="select-affiliation-container">
            <div class="form-group select-affiliation-type">
                <label> Select affiliation type to create or edit</label>
                <select class="form-control" id="edit-affiliation-type-input" data-placeholder="Select affiliation type" style="width:100%">
                    <option value=""></option>
                    <option value="1">Cost Center</option>
                    <option value="2">Outside Affiliation</option>
                </select>
            </div>
            <div class="select-create-or-edit-container form-inline">
                <button class="btn btn-primary create-btn" type="button">Create</button>
                <span>Or</span>
                <div class="select-affiliation-to-update-container form-group">
                    <div class="affiliation-select-div">
                        <div id="cost-center-input-div">
                            <select id="cost-center-edit-affiliation-input" class="form-control" data-placeholder="Select affiliation" style="width:100%">
                            </select>
                        </div>
                        <div id="outside-affiliation-input-div">
                            <select id="outside-edit-affiliation-input" class="form-control" data-placeholder="Select affiliation" style="width:100%">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="edit-div">
            <div class="form-group">
                <label class="control-label" for="affiliation-input">Affiliation *</label>
                <div>
                    <input required id="affiliation-input" class="form-control" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="affiliation-active-input">Active</label>
                <div>
                    <input id="affiliation-active-input" type="checkbox" />
                </div>
            </div>
            <div>
                <button class="btn btn-primary save-btn" type="button">Save</button>
                <button class="btn btn-default cancel-btn" type="button">Cancel</button>
                <button class="btn btn-default create-new-btn" type="button">Edit New Affiliation</button>
                <button class="btn btn-default delete-btn" type="button" data-toggle="modal" data-target="#confirm-modal">Delete</button>
            </div>
            <div class="modal fade" id="confirm-modal" tatabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Confirm</h4>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this affiliation?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="button" class="delete-ok-btn btn btn-primary" data-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
